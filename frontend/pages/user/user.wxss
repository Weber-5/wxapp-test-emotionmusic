.user-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fffe 0%, #e0f7fa 100%);
  padding: 0 0 40rpx 0;
}
.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 30rpx 0;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 18rpx;
  border: 3rpx solid #27ae60;
}
.user-nick {
  font-size: 36rpx;
  color: #27ae60;
  font-weight: 600;
}
.user-chart-title {
  text-align: center;
  font-size: 30rpx;
  color: #34495e;
  margin-bottom: 20rpx;
  font-weight: 500;
}
#historyChart, .ec-canvas {
  width: 90vw !important;
  height: 400rpx !important;
  margin: 0 auto 30rpx auto;
  background: transparent;
}
