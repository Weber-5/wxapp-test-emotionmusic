/* pages/index/index.wxss */

/* 全局样式 */
page {
  background: linear-gradient(135deg, #ffffff 0%, #f8fffe 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #2c3e50;
}

/* 容器样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 页面切换动画 */
.page-transition {
  transition: all 0.3s ease-in-out;
  transform: translateX(0);
}

.page-transition.slide-left {
  transform: translateX(-100%);
}

.page-transition.slide-right {
  transform: translateX(100%);
}

/* 主页样式 */
.home-page {
  position: relative;
  text-align: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  overflow: hidden;
}

/* 粒子背景已移除 */

/* 主页内容 */
.home-content {
  position: relative;
  z-index: 10;
  text-align: center;
}

.app-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.app-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 80rpx;
  line-height: 1.6;
}

.start-btn {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(39, 174, 96, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(39, 174, 96, 0.4);
}

.feature-list {
  margin-top: 60rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

.feature-text {
  flex: 1;
  text-align: left;
  font-size: 28rpx;
  color: #2c3e50;
}

/* 相机页面样式 */
.camera-page {
  position: relative;
  height: 100vh;
  background: #000;
}

.camera-container {
  width: 100%;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  padding-top: 60rpx;
  padding-bottom: 140rpx; /* 给底部按钮留更多空间 */
}

.camera-view {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.emotion-overlay {
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 10;
  pointer-events: none;
}

.emotion-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  padding: 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.emotion-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #27ae60;
  margin-bottom: 8rpx;
}

.confidence-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

.emotion-label {
  margin-left: 18rpx;
  color: #27ae60;
  font-size: 26rpx;
  font-weight: 500;
}

.control-buttons {
  position: absolute;
  left: 0;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 20;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.control-btn {
  flex: 1;
  margin: 0 16rpx;
  padding: 24rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.95);
  border: none;
  color: #2c3e50;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
}

.control-btn.primary {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(39, 174, 96, 0.3);
}

/* 进度条样式 */
.progress-bar {
  position: absolute;
  top: 20rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 30;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.progress-text {
  font-size: 24rpx;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.progress-container {
  width: 100%;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #27ae60, #2ecc71);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 报告页面样式 */
.report-page {
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fffe 100%);
  min-height: 100vh;
}

.report-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.report-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.report-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

.emotion-stats {
  margin-bottom: 60rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.stats-container {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
}

.stat-item {
  margin-bottom: 30rpx;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.emotion-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.progress-bar-small {
  width: 100%;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill-small {
  height: 100%;
  background: linear-gradient(90deg, #27ae60, #2ecc71);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.stat-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #7f8c8d;
}

.percentage {
  font-weight: 600;
  color: #27ae60;
}

.count {
  color: #7f8c8d;
}

.confidence {
  color: #7f8c8d;
}

.report-actions {
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

/* 音乐页面样式 */
.music-page {
  padding: 40rpx 20rpx;
}

.music-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.current-emotion {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  display: inline-block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.emotion-description {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
}

.music-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
  margin: 40rpx 0;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(39, 174, 96, 0.3);
}

.control-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2c3e50;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.mode-switch {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  padding: 10rpx;
  display: flex;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.mode-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  border-radius: 25rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.mode-btn.active {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
}

.mode-btn.inactive {
  color: #7f8c8d;
}

/* 推荐列表样式 */
.recommendations-list {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.debug-info {
  text-align: center;
  padding: 40rpx;
  color: #7f8c8d;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  margin: 20rpx 0;
}

.song-item {
  background: rgba(255, 255, 255, 0.8);
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  border-left: 6rpx solid #27ae60;
}

.song-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.song-item.playing {
  background: linear-gradient(135deg, rgba(39, 174, 96, 0.1), rgba(46, 204, 113, 0.1));
  border-left-color: #2ecc71;
}

.song-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.song-artist {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 15rpx;
}

.song-emotion {
  display: inline-block;
  background: rgba(39, 174, 96, 0.1);
  color: #27ae60;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.song-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.playing-dot {
  width: 12rpx;
  height: 12rpx;
  background: #27ae60;
  border-radius: 50%;
  animation: blink 1.2s infinite ease-in-out;
}
@keyframes blink {
  0%, 100% { opacity: 0.2 }
  50% { opacity: 1 }
}

/* 骨架屏 */
.skeleton-item {
  background: rgba(255, 255, 255, 0.8);
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.skeleton-title, .skeleton-sub, .skeleton-tag {
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
  background: #f0f3f4;
  margin-bottom: 16rpx;
}
.skeleton-title { height: 36rpx; width: 50%; }
.skeleton-sub { height: 24rpx; width: 30%; }
.skeleton-tag { height: 24rpx; width: 20%; border-radius: 14rpx; }
.skeleton-title::after, .skeleton-sub::after, .skeleton-tag::after {
  content: '';
  position: absolute; top: 0; left: -100%; height: 100%; width: 100%;
  background: linear-gradient(90deg, rgba(255,255,255,0), rgba(255,255,255,0.6), rgba(255,255,255,0));
  animation: shimmer 1.2s infinite;
}
@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 评分页面样式 */
.rating-page {
  padding: 60rpx 40rpx;
  text-align: center;
}

.rating-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 40rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 40rpx 0;
}

.star-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #ddd;
  transition: all 0.3s ease;
}

.star-btn.active {
  color: #f39c12;
  border-color: #f39c12;
  background: rgba(243, 156, 18, 0.1);
}

.rating-actions {
  display: flex;
  gap: 30rpx;
  justify-content: center;
  margin-top: 60rpx;
}

.action-btn {
  padding: 25rpx 50rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(39, 174, 96, 0.3);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.8);
  color: #7f8c8d;
  border: 2rpx solid #e0e0e0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #27ae60;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  color: #e74c3c;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 40rpx;
}

.retry-btn {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 25rpx 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .home-page {
    padding: 40rpx 20rpx;
  }
  
  .app-title {
    font-size: 40rpx;
  }
  
  .start-btn {
    padding: 25rpx 60rpx;
    font-size: 28rpx;
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.bounce {
  animation: bounce 0.6s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
} 

.report-chart {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  min-height: 400rpx;
}

/* ec-canvas 默认全屏，限制最大宽度 */
#emotionRing, .ec-canvas {
  width: 360rpx !important;
  height: 360rpx !important;
  max-width: 90vw;
  max-height: 90vw;
  margin: 0 auto;
  background: transparent;
} 

.user-bar {
  display: flex;
  align-items: center;
  padding: 24rpx 0 12rpx 0;
  background: transparent;
  z-index: 20;
}
.user-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  border: 2rpx solid #27ae60;
}
.user-nick {
  font-size: 30rpx;
  color: #27ae60;
  font-weight: 500;
} 

.user-center-btn {
  margin-left: 24rpx;
  padding: 10rpx 32rpx;
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: none;
  font-weight: 500;
} 

.countdown-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.7);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.countdown-content {
  background: #fff;
  border-radius: 30rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(39,174,96,0.15);
}
.countdown-title {
  font-size: 36rpx;
  color: #27ae60;
  font-weight: 600;
  margin-bottom: 30rpx;
}
.countdown-num {
  font-size: 80rpx;
  color: #27ae60;
  font-weight: bold;
  letter-spacing: 8rpx;
} 

.emotion-pie-canvas {
  width: 360rpx;
  height: 360rpx;
  max-width: 90vw;
  max-height: 90vw;
  margin: 0 auto 40rpx auto;
  display: block;
  background: transparent;
} 